{
  "name": "toolbox-ts",
  "private": true,
  "description": "A monorepo for TypeScript Utilities",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/toolbox-ts/toolbox-ts.git"
  },
  "keywords": [
    "typescript",
    "utilities",
    "monorepo"
  ],
  "author": {
    "name": "Nolan Gajdascz",
    "email": "dev.gajdascz@gmail.com",
    "url": "https://github.com/gajdascz"
  },
  "type": "module",
  "devDependencies": {
    "@changesets/cli": "^2.29.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.25.1",
    "@microsoft/tsdoc-config": "^0.17.1",
    "@types/node": "^22.14.1",
    "@vitest/coverage-v8": "3.0.9",
    "dependency-cruiser": "^16.10.1",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-import-resolver-typescript": "^4.3.4",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-tsdoc": "^0.4.0",
    "jiti": "^2.4.2",
    "memfs": "^4.17.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.0",
    "vitest": "^3.1.2"
  },
  "packageManager": "pnpm@10.9.0+sha512.0486e394640d3c1fb3c9d43d49cf92879ff74f8516959c235308f5a8f62e2e19528a65cdc2a3058f587cde71eba3d5b56327c8c33a97e4c4051ca48a10ca2d5f",
  "scripts": {
    "test": "vitest --run",
    "gen:depsReport": "npx depcruise packages/**/src/* --config ./.dep-cruiser.cjs --output-type json > ./docs/architecture/dependency-errors.json",
    "gen:depsGraph": "npx depcruise packages/**/src/* --config ./.dep-cruiser.cjs --output-type dot | dot -T svg > ./docs/architecture/dependency-graph.svg",
    "cruise": "pnpm run gen:depsReport && pnpm run gen:depsGraph",
    "format": "prettier --write .",
    "lint": "eslint . --fix",
    "typecheck": "tsc -b --noEmit",
    "clean": "tsc --build --clean && rm -rf .dev/.cache",
    "version": "changeset version",
    "release": "changeset publish",
    "commit": "git add . && git commit",
    "build:css-normalize": "pnpm --filter @toolbox-ts/css-normalize run build",
    "build": "tsc -b && pnpm run build:css-normalize && pnpm run cruise",
    "validate": "pnpm run eslint . && pnpm run prettier . && pnpm run typecheck && pnpm run test",
    "prepare:release": "pnpm run format && pnpm run lint && pnpm run test && pnpm changeset && pnpm changeset status"
  }
}
